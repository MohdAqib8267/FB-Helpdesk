datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String
  password  String
  createdAt DateTime? @default(now())
  updatdAt  DateTime? @default(now())
}

model Message {
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  msg_id String
  from FromJson @relation(fields: [fromId], references: [id])
  to ToJson[]
  message String
  created_at String
  fromId String
}

model FromJson {
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  messages Message[]
}

model ToJson {
  id String    @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String
  message Message? @relation(fields: [messageId], references: [id])
  messageId  String?
}
